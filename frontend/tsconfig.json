{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.test.ts",
    "tests/unit/**/*.spec.ts"
  ],
  "compilerOptions": {
    "module": "ESNext", // Use ESNext module syntax
    "target": "ESNext", // Target ESNext for compatibility
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "composite": true,
    "lib": ["DOM", "ES2019"],
    "esModuleInterop": true,
    "types": ["jest"], // Add Jest types
    "verbatimModuleSyntax": false // Disable strict module syntax
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
