{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.test.ts",
    "tests/unit/**/*.ts",
    "tests/unit/**/*.spec.ts"
  ],
  "exclude": [
    "tests/e2e/**",
    "tests/screenshots/**"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "composite": true,
    "lib": ["DOM", "ES2019"],
    "esModuleInterop": true,
    "types": ["vitest/globals", "node"],
    "verbatimModuleSyntax": false
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
